<h2>
  Modifier
</h2>
<p></p>
<hr>
<div class="row">
  <div class="col-md-8">
  <div class="content" data-slug="panel1">
  <%= form_for :products, url: {action:'update'}, method: "PUT" ,  :class=> "form-horizontal  form-border no-margin" do |f| %>
      <% if @products.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% @products.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
        <% end %>
      <div class="form-group">
        <label for="exampleInputEmail1"><%= f.label :name %></label>
        <%= f.text_field :name, :class =>"form-control"%>
      </div>
      <div class="form-group">
        <label for=""><%= f.label :price %></label>
        <%= f.text_field :price, :class =>"form-control" %>
      </div>
      <div class="form-group">
        <label for=""><%= f.label :margin_product %></label>
        <%= f.text_field :margin_product, :class =>"form-control" %>
      </div>
      <% @ingredients.each do |ingredient| %>
      <%= check_box_tag "ingredient_id[#{ingredient.id}]", ingredient.name_ingredient %>
        <label class="checkbox-inline" for="<%= ingredient.id %>"><%= ingredient.name_ingredient %></label>
      <% end %>
      <div class="form-group">
        <label for="exampleInputFile"><%= f.label :picture %></label>
        <%= f.file_field :picture, :class =>"form-control" %>
      </div>
      <%= f.submit "Modifier", :class=> "btn btn-default" %>
    <% end %>
  </div>
  </div>
</div>
