<div class="pricing-tables">
<hr>
<h2>
  Nouveau
</h2>
<p></p>
<hr>
<div class="row">
  <div class="col-md-8">
  <div class="content" data-slug="panel1">
  <%= form_for :products, url: {action:'create'}, :html => { :multipart => true }, :class=> "form-horizontal  form-border no-margin" do |f| %>
    <% if @products.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @products.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group">
        <label for="exampleInputEmail1"><%= f.label :name %></label>
        <%= f.text_field :name, :class =>"form-control"%>
      </div>
      <div class="form-group">
        <label for=""><%= f.label :price %></label>
        <%= f.text_field :price, :class =>"form-control" %>
      </div>
      <div class="form-group">
        <label for=""><%= f.label :margin_product %></label>
        <%= f.text_field :margin_product, :class =>"form-control" %>
      </div>

      <% @ingredients.each do |ingredient| %>
        <label class="checkbox-inline" for="<%= ingredient.id %>"><%= ingredient.name_ingredient %></label>
        <%= check_box_tag ingredient.id, ingredient.name_ingredient %>
      <% end %>
      <div class="form-group">
        <label for="exampleInputFile">Images</label>
        <%= f.file_field :img, :class =>"form-control" %>
      </div>
      <%= f.submit "Publier", :class=> "btn btn-default" %>
    <% end %>
  </div>
  </div>
</div>
</div>