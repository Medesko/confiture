<h2>
  Modifier
</h2>
<p></p>
<hr>
<div class="row">
  <div class="col-md-8">
  <div class="content" data-slug="panel1">
  <%= form_for :ingredients, url: {action:'update'}, method: "PUT" ,  :class=> "form-horizontal  form-border no-margin" do |f| %>
    <% if @ingredients.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @ingredients.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group">
        <label for="exampleInputEmail1"><%= f.label :name_ingredient %></label>
        <%= f.text_field :name_ingredient, :class =>"form-control"%>
      </div>
      <%= f.submit "Modifier", :class=> "btn btn-default" %>
    <% end %>
  </div>
  </div>
</div>
