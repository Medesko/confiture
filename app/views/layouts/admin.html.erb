<!DOCTYPE html>
<html>
<head>

  <title>Rails Store Administration</title>
  <link href='http://fonts.googleapis.com/css?family=Playfair+Display|Krona+One' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    "application", media: 'screen' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%=@section%>">

	<div id="wraper">

		<%= render :partial => "admin/header" %>
		
		<div class="container" id="container">
			<div class="pricing-tables">
			<%= content_tag(:div, flash[:error], :class => "alert alert-danger", :id => "flash_error") if flash[:error] %>
			<%= content_tag(:div, flash[:notice], :class => "alert alert-success", :id => "flash_notice") if flash[:notice] %>
			<%= content_tag(:div, flash[:alert], :class => "alert alert-info", :id => "flash_alert") if flash[:alert] %>
			<%= yield %>
			</div> <!-- pricing-tables -->
		</div>

		<%= render :partial => "admin/footer" %>
	</div>


</body>
</html>